
<form action="/cart/register/<%= user._id %>" method="POST">   
  
  <fieldset>
    <legend>
      <h3>Data Del Luogo e Persona con cui regalare</h3>
      <h2 class="message"></h2>
    </legend>
    <div  class="place-details">
        <div class="form__input-group">
          <label>Nome del Ristorante*</label><input class="party-data" type="text" name="name">
          <div class="form__input-error-message"></div>
        </div>
        <div class="form__input-group">
          <label>Via</label><input type="text" class="party-data" name="via">
          <div class="form__input-error-message"></div>
        </div>
        <div class="form__input-group">
          <label>Cita*</label><input type="text" class="party-data" name="citta">
          <div class="form__input-error-message"></div>
        </div>
        <div class="form__input-group">
          <label>CAP*</label><input type="text" class="party-data input-number" name="cap">
          <div class="form__input-error-message"></div>
        </div>
        <div class="form__input-group">
          <label>Nome della Persona*</label><input class="party-data" type="text" name="name_person">
          <div class="form__input-error-message"></div>
        </div>
        <div class="form__input-group">
            <label>Gender*</label>
            <div class="gender">
              <div class="form__input-group">
                <input class="party-data" type="radio" value="none" id="uomo" name="gender"/>
                <label for="male" class="radio">Uomo</label>
                <div class="form__input-error-message"></div>
              </div>
              <div class="form__input-group">
                <input class="party-data" type="radio" value="none" id="donna" name="gender"/>
                <label for="female" class="radio">Donna</label>
                <div class="form__input-error-message"></div>
              </div>
            </div>
        </div>
    </div>
       
  </fieldset>
  

  <fieldset>
    <legend>
      <h3>Terms and Mailing</h3>
    </legend>
    <div  class="terms-mailing">
        <div class="checkbox">
          <input type="checkbox" name="checkbox"><span>I accept the <a href="https://www.w3docs.com/privacy-policy">Privacy Policy for W3Docs.</a></span>
        </div>
        <div class="checkbox">
          <input type="checkbox" name="checkbox"><span>I want to recelve personallzed offers by your site</span>
        </div>
      </div>
  </fieldset>
  <button class="btn-submit" data-product_id=<%= product_id %> type="submit">Submit</button>
</form>